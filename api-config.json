{
  "version": "1.0.0",
  "server": {
    "port": 3000,
    "host": "localhost",
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:3000", "https://example.com"]
    }
  },
  "database": {
    "type": "postgresql",
    "connection": {
      "host": "${DB_HOST}",
      "port": 5432,
      "database": "${DB_NAME}",
      "username": "${DB_USER}",
      "password": "${DB_PASSWORD}"
    },
    "pool": {
      "min": 2,
      "max": 10
    }
  },
  "auth": {
    "jwt": {
      "secret": "${JWT_SECRET}",
      "expiresIn": "24h"
    },
    "oauth": {
      "google": {
        "clientId": "${GOOGLE_CLIENT_ID}",
        "clientSecret": "${GOOGLE_CLIENT_SECRET}"
      }
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "destinations": ["console", "file"]
  },
  "features": {
    "rateLimiting": true,
    "healthCheck": true,
    "metrics": true,
    "swagger": true
  }
}